<div class="container mt-4">
   <h1 class="text-center">Actualizar Anime</h1>
   <div class="container border border-radio w-50">
      <form action='/updatefile/{{id}}' method='GET'>
         <div class='mb-3'>
            <label for='nombre' class='form-label'>Nombre de anime</label>
            <input type='text' class='form-control' id='nombre' name='nombre' value='{{anime.nombre}}' required />
         </div>
         <div class='mb-3'>
            <label for='genero' class='form-label'>Genero</label>
            <input type='text' class='form-control' id='genero' name='genero' value='{{anime.genero}}' required />
         </div>
         <div class='mb-3'>
            <label for='anio' class='form-label'>Año de publicación</label>
            <input type='number' class='form-control' id='anio' name='anio' value='{{anime.anio}}' required />
         </div>
         <div class='mb-3'>
            <label for='autor' class='form-label'>Autor</label>
            <input type='text' class='form-control' id='autor' name='autor' value='{{anime.autor}}' required />
         </div>

         <button type='submit' class='btn btn-outline-secondary w-100'>Actualizar Anime</button>
      </form>
   </div>
</div>